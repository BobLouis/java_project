package application;

import javafx.fxml.FXML;
import javafx.scene.control.Label;

public class SceneController {

	@FXML
	Label displayLabel;
	private String display = "";
	
	
	@FXML
	Label resultLabel ;
	private String result = "";
	
	public void zero(){
		System.out.println("0");
		displayLabel.setText(display+"0");
		display+="0";
		
		resultLabel.setText(result+"0");
		result+="0";
	}
	
	public void one(){
		System.out.println("1");
		displayLabel.setText(display+"1");
		display+="1";
		
		resultLabel.setText(result+"1");
		result+="1";
	}
	
	public void two(){
		System.out.println("2");
		displayLabel.setText(display+"2");
		display+="2";
		
		resultLabel.setText(result+"2");
		result+="2";
	}
	
	public void three(){
		System.out.println("3");
		displayLabel.setText(display+"3");
		display+="1";
		
		resultLabel.setText(result+"3");
		result+="3";
	}
	
	public void four(){
		System.out.println("4");
		displayLabel.setText(display+"4");
		display+="4";
		
		resultLabel.setText(result+"4");
		result+="4";
	}
	
	public void five(){
		System.out.println("5");
		displayLabel.setText(display+"5");
		display+="5";
		
		resultLabel.setText(result+"5");
		result+="5";
	}
	
	public void six(){
		System.out.println("6");
		displayLabel.setText(display+"6");
		display+="6";
		
		resultLabel.setText(result+"6");
		result+="6";
	}
	
	public void seven(){
		System.out.println("7");
		displayLabel.setText(display+"7");
		display+="7";
		
		resultLabel.setText(result+"7");
		result+="7";
	}
	
	public void eight(){
		System.out.println("8");
		displayLabel.setText(display+"8");
		display+="8";
		
		resultLabel.setText(result+"8");
		result+="8";
	}
	
	public void nine(){
		System.out.println("9");
		displayLabel.setText(display+"9");
		display+="9";
		
		resultLabel.setText(result+"9");
		result+="9";
	}
	
	public void dot() {
		System.out.println(".");
		displayLabel.setText(display+".");
		display+=".";
		
		resultLabel.setText(result+".");
		result+=".";
	}
	
	public void divide() {
		System.out.println("/");
		displayLabel.setText(display+"/");
		display+="/";
		
	}
	
	public void mutiple() {
		System.out.println("*");
		displayLabel.setText(display+"*");
		display+="*";
	}
	
	
	public void plus() {
		System.out.println("+");
		displayLabel.setText(display+"+");
		display+="+";
	}
	
	public void minus() {
		System.out.println("-");
		displayLabel.setText(display+"-");
		display+="-";
	}
	
	public void equal() {
		System.out.println("=");
		displayLabel.setText(display+"=");
		display+="=";
	}
	
	public void backspace() {
		System.out.println("<-");
		
		removeLastChar(result);
		resultLabel.setText(result);
		
	}
	
	public void clearEntry() {
		System.out.println("CE");
		
		result="";
		resultLabel.setText(result);
	}
	
	public void clearAll() {
		System.out.println("AC");
		display="";
		displayLabel.setText(display);
		
		
		result="";
		resultLabel.setText(result);
	}
	
	
	
	public static String removeLastChar(String s) {
	    return (s == null || s.length() == 0)
	      ? null 
	      : (s.substring(0, s.length() - 1));
	}
	
	
	
	
	
	
	
	
	
	
	
	
	
	
	
	
}